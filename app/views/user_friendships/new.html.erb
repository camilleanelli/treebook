<% if @friend %>
  <h1><%= @friend.full_name %></h1>
  <p>Do you really want to add <%= @friend.full_name %> ?</p>

<%= form_for @user_friendship, method: :post do |form| %>
  <div class="form form_actions">
    <%= form.hidden_field :friend_id, value: @friend.id %>
    <%= submit_tag "Yes add this friend", class: 'btn btn-primary' %>
    <%= link_to "Cancel", profile_path(@friend), class: 'btn btn-primary' %>
  </div>
  <% end %>
<% end %>
