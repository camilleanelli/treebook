<div class="page-header text-center">
  <h1>Se connecter</h1>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, label: "Mot de passe", required: false %>
        <%= f.input :remember_me, label: "Mémoriser mon compte", as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Valider" %>
      </div>
    <% end %>

    <%= link_to "Mot de passe oublié", new_password_path(resource_name) %>
  </div>
</div>
